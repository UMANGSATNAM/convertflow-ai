{
  "name": "convertflow-ai",
  "private": true,
  "scripts": {
    "postinstall": "npx prisma generate || true && npx remix vite:build",
    "dev": "remix dev",
    "build": "npx prisma generate && npx prisma db push --accept-data-loss || true && npx remix vite:build",
    "start": "node app.js",
    "typecheck": "tsc",
    "lint": "eslint --ignore-path .gitignore .",
    "db:setup": "npx prisma db push",
    "db:migrate": "npx prisma migrate deploy",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && npm run start"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.3.0",
    "@prisma/client": "^5.10.2",
    "@remix-run/dev": "^2.0.0",
    "@remix-run/express": "^2.0.0",
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@remix-run/serve": "^2.0.0",
    "@shopify/app-bridge": "^3.7.11",
    "@shopify/app-bridge-react": "^4.2.10",
    "@shopify/polaris": "^13.9.5",
    "@shopify/shopify-api": "^7.0.0",
    "@shopify/shopify-app-remix": "^4.1.1",
    "@shopify/shopify-app-session-storage-memory": "^5.0.5",
    "@shopify/shopify-app-session-storage-prisma": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "express": "^4.18.0",
    "isbot": "^5.1.0",
    "mysql2": "^3.9.0",
    "postcss": "^8.4.0",
    "prisma": "^5.10.2",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}