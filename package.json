{
  "name": "convertflow-ai",
  "private": true,
  "scripts": {
    "preinstall": "npx prisma generate || true",
    "postinstall": "chmod -R +x node_modules/.bin 2>/dev/null || true",
    "dev": "remix dev",
    "build": "chmod -R +x node_modules/.bin 2>/dev/null; npx prisma generate && npx remix vite:build",
    "start": "npx remix-serve build/server/index.js",
    "typecheck": "tsc",
    "lint": "eslint --ignore-path .gitignore .",
    "db:setup": "npx prisma db push",
    "db:migrate": "npx prisma migrate deploy",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && npm run start",
    "analyze": "npx bundle-analyzer",
    "lighthouse": "lighthouse https://yourapp.com --view"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^16.3.0",
    "@prisma/client": "^5.0.0",
    "@remix-run/dev": "^2.0.0",
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@remix-run/serve": "^2.0.0",
    "@shopify/app-bridge": "^3.7.11",
    "@shopify/app-bridge-react": "^4.2.10",
    "@shopify/polaris": "^13.9.5",
    "@shopify/shopify-api": "^7.0.0",
    "@shopify/shopify-app-remix": "^4.1.1",
    "autoprefixer": "^10.4.0",
    "mysql2": "^3.9.0",
    "postcss": "^8.4.0",
    "prisma": "^5.0.0",
    "react": "^18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "vite": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}