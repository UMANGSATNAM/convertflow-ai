# Database Configuration (MySQL - Hostinger)
DATABASE_URL=mysql://USERNAME:PASSWORD@localhost:3306/DATABASE_NAME

# Individual DB vars (used by db.server.js)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-domain.com
SCOPES=write_themes,read_themes,write_products,read_products

# Session Secret (32+ characters recommended)
SESSION_SECRET=generate_a_random_32_char_string_here

# Environment
NODE_ENV=production
PORT=3000
